<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="triangle" class="io.javabrains.learningspringcore.chapters10.Triangle" autowire="byName"> 
	</bean>
	<!-- id should be same as variable name in Class -->
	<bean id="pointA" class="io.javabrains.learningspringcore.chapters10.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="pointB" class="io.javabrains.learningspringcore.chapters10.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>
	<bean id="pointC" class="io.javabrains.learningspringcore.chapters10.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>
</beans>