<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="triangle" class="io.javabrains.learningspringcore.chapters07.Triangle">
		<property name="pointA" ref="zeropoint" />
		<property name="pointB" ref="point2" />
		<property name="pointC" ref="point3" />
	</bean>
	<bean id="zeropoint" class="io.javabrains.learningspringcore.chapters07.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="point2" class="io.javabrains.learningspringcore.chapters07.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>
	<bean id="point3" class="io.javabrains.learningspringcore.chapters07.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>
</beans>